<%= render :partial => 'layouts/sidebar' %>

<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-5">
      <div class="signupBlock">

        <h1>Sign Up</h1>

        <%= form_for @user do |f| %>

          <%= render 'shared/error_messages', object:f.object, style:"position:absolute;" %>

          <%= f.label :name, "Username" %>
          <%= f.text_field :name, class:"form-control" %><br>

          <%= f.label :email %>
          <%= f.email_field :email, class:"form-control" %><br>

          <%= f.label :password %>
          <%= f.password_field :password, class:"form-control" %><br>

          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation, class:"form-control" %><br>

          <%= f.submit "Create Account", class: "btn btn-md btn-default", style: "float: right; margin-top: -10px;" %><br>

        <% end %>

      </div>
    </div>
  </div>
</div>
