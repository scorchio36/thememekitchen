$(function() {
  //$('.postTitle').html("<p>Title: <%= @current_post.title %></p>");
  $('.postOwner').html("<%= @poster.name %>");
  $('.postDescription').html("<h2><%= @current_post.description %></h2>");
  $('.buffetPostImage').html("<%= escape_javascript image_tag(@current_post.picture.url, alt: "current image") if (@current_post).picture? %>");
  $('.profilePicture').html("<%= escape_javascript image_tag(@poster.picture.url, alt: "profile image", class: "img-circle") %>");


  $('.linkToProfile').attr("href", "<%= user_path(@poster) %>");
  $('.postTime').html("Posted <%= time_ago_in_words(@current_post.created_at) %> ago");


  //like button stuff
  $('.postLikes').html("<%= @current_post.likes %>");

  <% if @current_post.liked_by(current_user) %>
    $('.likeButton').html("Liked");

  <% else %>
    $('.likeButton').html("Like");

  <% end %>

  //dislike button stuff
  $('.postDislikes').html("<%= @current_post.dislikes %>");

  <% if @current_post.disliked_by(current_user) %>
    $('.dislikeButton').html("Disliked");

  <% else %>
    $('.dislikeButton').html("Dislike");

  <% end %>

  $('.postComments').html("<%= escape_javascript(render(:partial => 'comments')) %>");

});
