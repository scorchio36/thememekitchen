<!-- Login page -->
<%= provide(:background_image, "memeBackground") %>
<% provide(:title, "Login") %>
<% provide(:subtitle, "Table for meme?") %>

<div class="container">

  <div class="row">
    <div class="col-md-offset-2">
      <div>
        <h1 class="signupPageTitle">Welcome to The Meme Kitchen
          <br><small>-The Dankest Meme Restaurant on the Internet</small></h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-4 col-md-5">
      <div class="loginBlock">
        <h1 style= "color: #676767;">Login</h1>

        <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :name, "Username", style: "color: #676767;"%>
          <%= f.text_field :name, class: "form-control" %><br>

          <%= f.label :password, style: "color: #676767;" %>
          <%= f.password_field :password, class: "form-control" %><br>

          <%= f.submit "Log in", class:"btn btn-lg btn-danger", style:"float: right; margin-top: -10px; font-weight: bold;" %>

          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %>
            <span style= "color: #676767;">Remember me on this computer</span>
          <% end %>

        <% end %>
      </div>
      <p style="float: right; font-weight:bold; padding: 5px; color: white; text-shadow: 1px 1px black;">Dont have an account? <%= link_to "Sign up", signup_path %>. <br>We wanna see your sickest memes.</p>
    </div>
  </div>
</div>
